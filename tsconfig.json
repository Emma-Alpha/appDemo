{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "dom", "dom.iterable", "esnext"]
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/fixtures",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/templates",
    "ui"
  ],
  "include": [
    "./src/**/*",
    "./react-app-env.d.ts"
  ],
}
