{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": [
        "./src/pages/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
    },
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/fixtures",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/templates",
    "ui"
  ],
  "include": ["./src/**/*", "./react-app-env.d.ts", "config/router"]
}
